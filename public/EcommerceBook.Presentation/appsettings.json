{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=EcommerceBookDb;User=root;Password=;",
    "RedisCache": "localhost:6379" // Optional for caching
  },
  "Jwt": {
    "Key": "ThisIsASecretKeyYouShouldReplaceIt", // üîê Replace with strong key in production
    "Issuer": "EcommerceBookAPI",
    "Audience": "EcommerceBookAPIClient",
    "ExpireMinutes": 60,
    "RefreshTokenExpireDays": 7
  },
  "FileStorageSettings": {
    "ProfileImagePath": "wwwroot/images/profiles",
    "ProfileImageBaseUrl": "/images/profiles",
    "AllowedExtensions": [ ".jpg", ".jpeg", ".png" ],
    "MaxFileSizeMB": 5,
    "BookImagePath": "wwwroot/images/books",
    "BookImageBaseUrl": "/images/books"
  },
  "EmailSettings": {
    "SmtpServer": "smtp.yourdomain.com",
    "Port": 587,
    "Username": "your@email.com",
    "Password": "your-email-password",
    "FromEmail": "noreply@ecommercebook.com",
    "EnableSSL": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information",
      "Microsoft.EntityFrameworkCore.Infrastructure": "Warning"
    },
    "File": {
      "Path": "Logs/log-.txt",
      "Append": true,
      "FileSizeLimitBytes": 10485760, // 10MB
      "RetainedFileCountLimit": 5
    }
  },
  "AllowedHosts": "*",
 
  "RateLimiting": {
    "PermitLimit": 100,
    "Window": "00:01:00",
    "QueueLimit": 10
  },
  "ApplicationSettings": {
    "DefaultAdminEmail": "admin@ecommercebook.com",
    "DefaultPageSize": 10,
    "MaxPageSize": 100
  }
}